<%= form_for(@user, url: signup_path) do |f| %>
  <div>
    <%= f.label(:name) %><br>
    <%= f.text_field(:name) %>
  </div>
  <div>
    <%= f.label(:email) %><br>
    <%= f.text_field(:email, required: true) %>
  </div>
  <div>
    <%= f.label(:password) %><br>
    <%= f.password_field(:password) %>
  </div>
  <div>
    <%= f.label(:password_confirmation) %><br>
    <%= f.password_field(:password_confirmation, required: true) %>
  </div>
  <%= f.submit("Signup") %>
<% end %>
